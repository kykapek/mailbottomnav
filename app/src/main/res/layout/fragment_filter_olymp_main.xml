<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="15dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_main_search_olymp_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/darkwhite"
                android:src="@drawable/app_src_main_res_drawable_ic_back"
                app:backgroundTint="@color/darkwhite"
                app:shapeAppearance="@color/carousel_pink"></com.google.android.material.floatingactionbutton.FloatingActionButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="88dp"
                android:text="Олимпиады"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/gray_card">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_olymp_choose_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@color/gray_card"
                        android:text="Предметы"
                        android:textColor="@color/black"
                        android:textStyle="bold"></Button>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_olymp_choose_subject_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="92dp"
                        android:backgroundTint="@color/darkwhite"
                        android:src="@drawable/ic_way"
                        app:backgroundTint="@color/darkwhite"
                        app:shapeAppearance="@color/carousel_pink"></com.google.android.material.floatingactionbutton.FloatingActionButton>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_olymp_choose_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@null"
                        android:backgroundTint="@color/gray_card"
                        android:text="Уровень олимпиады"
                        android:textColor="@color/black"
                        android:textStyle="bold"></Button>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_olymp_choose_level_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:backgroundTint="@color/darkwhite"
                        android:src="@drawable/ic_way"
                        app:backgroundTint="@color/darkwhite"
                        app:shapeAppearance="@color/carousel_pink"></com.google.android.material.floatingactionbutton.FloatingActionButton>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_olymp_choose_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:backgroundTint="@color/gray_card"
                        android:paddingLeft="10dp"
                        android:text="Класс"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"></TextView>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btn_olymp_choose_class_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="124dp"
                        android:backgroundTint="@color/darkwhite"
                        android:src="@drawable/ic_way"
                        app:backgroundTint="@color/darkwhite"
                        app:shapeAppearance="@color/carousel_pink"></com.google.android.material.floatingactionbutton.FloatingActionButton>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>